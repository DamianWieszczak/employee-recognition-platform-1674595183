
<h1>Listing of Rewards</h1>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Purchase Time</th>
      <th>Price paid</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.reward.title %></td>
        <td><%= order.reward.description %></td>
        <td><%= order.created_at %></td>
        <td><%= order.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to list", admins_employees_path, class: "btn btn-outline-secondary" %>
