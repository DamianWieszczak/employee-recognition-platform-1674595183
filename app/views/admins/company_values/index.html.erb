<h1>Company Values</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @company_values.each do |company_value| %>
      <tr>
        <td><%= company_value.title %></td>
        <td><%= link_to "Edit", edit_admins_company_value_path(company_value), class: "btn btn-outline-warning" %></td>
        <td><%= link_to "Delete", admins_company_value_path(company_value), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Company Value', new_admins_company_value_path, class: "btn btn-warning" %>
