<h1>Categories</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to "Edit", edit_admins_category_path(category), class: "btn btn-outline-warning" %></td>
        <td><%= link_to "Delete", admins_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_admins_category_path, class: "btn btn-warning" %>
