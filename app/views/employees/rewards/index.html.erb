<h1>Rewards</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Category</th>
      <th>Image</th>
      <th>Delivery Method</th>
      <th>Available</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.price %></td>
        <td><%= link_to reward.category.title, employees_reward_category_path(reward.category) %></td>
        <td><%= image_tag reward.image.variant(resize_to_limit: [100, 100]) if reward.image.attached? %></td>
        <td><%= reward.delivery_method %></td>
        <td><%= reward.available_rewards_index %>
        <td><%= link_to 'Show', employees_reward_path(reward), class: "btn btn-outline-warning" %></td>
        <td><%= link_to 'Buy', new_employees_order_path(reward: reward), class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Edit', edit_employees_reward_path(reward), method: :get, class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Reward', new_admins_reward_path, class: "btn btn-warning" %>

<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
