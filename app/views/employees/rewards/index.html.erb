<h1>Rewards</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.price %></td>
        <td><%= reward.category.title %></td>
        <td><%= link_to 'Show', employees_reward_path(reward), class: "btn btn-outline-warning" %></td>
        <td><%= link_to 'Buy', employees_orders_path(reward: reward), method: :post, class: "btn btn-outline-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Reward', new_admins_reward_path, class: "btn btn-warning" %>

<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
