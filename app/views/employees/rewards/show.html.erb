<h1>Reward</h1><br>
<div class="card text-center mt-2 mb-2">
  <div class="card-header">
    Title: <%= @reward.title %>
  </div>
  <div class="card-body">
    <%= image_tag @reward.image.variant(resize_to_limit: [100, 100]) if @reward.image.attached? %>
    <h6 class="card-title">
      Description: <p><%= @reward.description %></p>
    </h6>
      Price: <p class="card-text"><%= @reward.price %></p>
  </div>
  <div class="card-footer">
      <%= link_to 'Back', employees_rewards_path, class: "btn btn-outline-dark btn-sm" %>
  </div>
</div>
