<h1>Listing of <i><%= current_employee.email %></i> Rewards</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Purchase Time</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% orders.each do |order| %>
      <% if order.employee == current_employee %>
        <tr>
          <td><%= order.reward.title %></td>
          <td><%= order.reward.description %></td>
          <td><%= order.created_at %></td>
          <td><%= order.price %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
