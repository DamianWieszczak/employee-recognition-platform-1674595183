<%= form_with(model: [:employees, kudo]) do |form| %>
  <%= render 'shared/errors', object: kudo %> 

  <div class="field">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="field mb-2 mt-2">
    <%= form.label :receiver, class: "form-label" %>
    <%= form.collection_select :receiver_id, Employee.all, :id, :email, class: "form-control" %>
  </div>

  <div class="field mb-2 mt-2">
    <%= form.label :company_value, class: "form-label" %>
    <%= form.collection_select :company_value_id, CompanyValue.all, :id, :title, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-dark" %><br>
    <%= form.label "[You have 5 minutes to edit/delete the kudo after it has been created]", class: "form-label" %>
  </div>
<% end %>
